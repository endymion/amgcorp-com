= form_for(@press_release) do |f|
  - if @press_release.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@press_release.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @press_release.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :body
    %br
    = f.text_field :body

  .actions
    = f.submit
