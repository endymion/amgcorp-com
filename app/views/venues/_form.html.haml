= form_for(@venue) do |f|
  - if @venue.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@venue.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @venue.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :name
    %br
    = f.text_field :name

  .field
    = f.label :body
    %br
    = f.text_area :body

  %br
  .field
    = f.label :image
    %br
    = f.file_field :image
    %br
    - unless @venue.image_file_name.nil?
      = image_tag @venue.image.url

  %br
  .actions
    = f.submit
