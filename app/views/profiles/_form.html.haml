= form_for(@profile) do |f|
  - if @profile.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@profile.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @profile.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :body
    %br
    = f.text_area :body

  %br
  .actions
    = f.submit
